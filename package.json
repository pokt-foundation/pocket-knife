{
  "name": "pocket-tools",
  "version": "0.1.0",
  "description": "Everyday, handy tools for the Pocket blockchain",
  "author": "@evalir",
  "license": "MIT",
  "main": "dist/index-node.js",
  "module": "dist/index.mjs",
  "browser": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --dts --format esm,cjs --target=es2019",
    "dev": "tsup --watch --dts --format esm,cjs --target=es2019",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "tsup": {
    "splitting": true,
    "sourcemap": true,
    "clean": true,
    "entryPoints": [
      "src/index.ts"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "jest": "^27.2.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "tsup": "^5.1.0",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "hex-lite": "^1.5.0",
    "isomorphic-webcrypto": "^2.3.8"
  }
}
